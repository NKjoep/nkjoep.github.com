<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- !!page.title ? `${page.title + ' | ' }` : '' %><%- theme.title %></title>
    <link rel="stylesheet" href="<%- url_for('css/css.css') %>">
    <%- theme.rss ? `<link rel="alternate" href="${ url_for(theme.rss) }" title="${config.title}" type="application/atom+xml">` : '' %>
    <%- theme.favicon ? `<link rel="icon" href="${theme.favicon}">` : '' %>

    <!-- icons start -->
    <meta name="theme-color" content="<%- theme.theme_colors.brand %>">
    <link rel="icon" href="/favicon/steal-fav512w.svg">
    <link rel="apple-touch-icon" href="/favicon/steal-fav180w.png">
    <!-- icons end -->

    <!-- gallery start -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.js"></script>
    <!-- gallery end -->

    <!-- og meta start -->
    <%- open_graph({ twitter_id: theme.author.twitter }) %>
    <!-- og meta end -->

  </head>

  <body class="stealthefish">

    <%- partial('partial/navigation') %>

    <hr />

    <main class="stealthefish__main">
      <%- body %>
    </main>

    <hr />


    <aside class="stealthefish__aside">
      <h2>Projects</h2>
      <p>
        Experiments, tests and other stuff I've worked on. Have a look.
      </p>

      <%-
        `<ul class="stealthefish__list-inline">
          ${github().map((project) => {
            return `
              <li>
                <a href="${url_for( project.homepage || project.html_url)}" title="${htmlAttribute(project.description || '')}">
                  <h3>${project.name}</h3>
                </a>
              </li>
            `
          }).join('')}
        </ul>`
      %>

    </aside>

    <hr />

    <footer class="stealthefish__footer">
      <section class="stealthefish__footer-credits">
        <h2 class="screen-reader-only">Credits</h2>
        <p>
          &copy; Andrea Dess√¨ <%- `${new Date().getFullYear()}` %>.
        </p>
        <p>
          All The Ideas are mine if not specified otherwise.
        </p>
      </section>
      <section class="stealthefish__footer-pics">
        <h2 class="screen-reader-only">Some pictures from me.</h2>
        <%-
          theme.footer.images.map((image, index) => {
            return `<a href="${url_for(image.path)}" title="${image.title || ''}"
                style="background: radial-gradient(circle, ${image.color} 40%, #fff 170%);">
              <img src="${url_for(image.path)}" width="40" alt="" loading="lazy" />
            </a>`;
          }).join('')
        %>
        <script>
          new SimpleLightbox({elements: '.stealthefish__footer-pics a'});
        </script>
      </section>
    </footer>

    <%- debug({theme, page}) %>
  </body>
</html>
