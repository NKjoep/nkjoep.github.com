<article class="stealthefish__hero">
<%- `${!!theme.author.gravatar ?
  `<img src="${url_for(theme.author.gravatar)}"  alt="Gravatar: ${config.author}" />` : ''
}` %>
<% if (is_home()) { %>
  <%- markdown(theme.hero_content) %>
<% } else {%>
  <%- markdown(theme.hero_content).replace(/h1>/g, 'header>') %>
<% }%>
</article>
